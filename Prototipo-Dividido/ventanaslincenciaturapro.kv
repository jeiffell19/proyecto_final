<LincenciaturaPro>:
    
    canvas:
        Color:
            rgba: 0, 1, 0, .5
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text:
            ('[b]LICENCIATURAS  PARA EJECUTIVOS[/b]')
        markup: True
        font_size: 25       
        size_hint:(None, None)
        size:(100, 44)
        pos_hint:{'center_x': .5 , 'center_y': .78}
    Image:
        size_hint: None, None 
        size: 400, 250
        source: 'data/info_ventana3.png'
        pos_hint:{'center_x': .5 , 'center_y': .5}
    Button:
        text: 'Carrera'
        size_hint:(None, None)
        size:(250, 50)
        pos_hint:{'center_x': .5,'center_y': .20}
        on_release: 
            # root.manager.current = 'carreras'
            root.mostrar()    
    Button:
        text: 'Menu Principal'
        size_hint:(None, None)
        size:(250, 50)
        pos_hint:{'center_x': .5,'center_y': .10}
        on_release: 
            # root.manager.current = 'principal'
            root.mostrar()  